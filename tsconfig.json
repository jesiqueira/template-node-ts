// tsconfig.json
{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "express", "jest", "sequelize"], // Adiciona tipagens que você instalou
    "esModuleInterop": true,

    /* Stricter Typechecking Options */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Recommended Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, // Boa prática
    "sourceMap": true, // Útil para debug
    "declaration": true // Gera arquivos .d.ts
  }
}
